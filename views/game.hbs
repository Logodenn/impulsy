<!DOCTYPE html>
<html lang="en">
    <head>
        <title></title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="css/pages/game.css" rel="stylesheet">
        
        <script src="/socket.io/socket.io.js"></script>
        <script src="js/game.js"></script>
        <script src="js/canvas.js"></script>
    </head>
    <body>

        <section class="content">

            <div id="startButtons" class="buttonWrapper flex-col">
                <button id="createGameButton" class="button" state="passive" onclick="App.Host.onCreateClick()">Init: create game</button>
                <button id="startGameButton" class="button" state="disabled" onclick="App.Host.onStartClick()">Ready: start game</button>
            </div>

            <div id="canvasWrapper"></div>

            <div id="moveButtons" class="flex-row hidden">
                <button id="upwardButton" class="button" state="passive" onclick="onTabletMove('up')">Up</button>
                <button id="downwardButton" class="button" state="passive" onclick="onTabletMove('down')">Do</button>
            </div>

        </section>
    </body>
</html>