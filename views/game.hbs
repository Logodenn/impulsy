<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Impulsy - Ride the music!</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="/css/pages/game.css" rel="stylesheet">
        
        <script src="/socket.io/socket.io.js"></script>
        <script src="/js/chunkPlayer.js"></script>
        <script src="/js/ws.js"></script>
        <script src="/js/game.js"></script>
        <script src="/js/canvas.js"></script>
    </head>
    <body>

        <section class="content">
            {{!-- HOME BUTTON --}}

            <a href="/">
                <button id="homeButton" class="button button-small"><img src="../img/home.svg" alt="Home" width="30px" height="30px"></button>
            </a>

            <div id="startButtons" class="buttonWrapper">
                <button id="createGameButton" class="button" state="passive" onclick="App.Host.onCreateClick()">Init: create game</button>
                <button id="startGameButton" class="button" state="disabled" onclick="App.Host.onStartClick()">Ready: start game</button>
            </div>

            <div id="score" class="hidden">
                <span id="artefactsTaken">0</span> / <span id="artefactsToTake">32</span>
            </div>

            <div id="canvasWrapper"></div>

            <div id="moveButtons" class="flex-row hidden">
                <button id="upwardButton" class="button hidden" state="passive" onclick="onTabletMove('up')">Up</button>
                <button id="downwardButton" class="button hidden" state="passive" onclick="onTabletMove('down')">Do</button>
            </div>

            {{!-- ENDGAME LAYER --}}

            <div id="endGameLayer" class="flex-col hidden">
                <span id="gameState"></span>
                <span>Your score is : $$$</span> 

                {{!-- SAVE SCORE --}} 

                {{!-- if the user hasn't logged in --}}
                <span>Wanna save your score?</span>
                <a href="signup">
                    <button class="button">Sign up</button>
                </a>

                {{!-- FAVORITE --}}

                <a href="#">
                    <button class="button">Favorite this track</button>
                </a>

                {{!-- PLAY --}}

                <a href="trackSelection">
                    <button class="button">Play again</button>
                </a>                
            </div>

        </section>
    </body>
</html>