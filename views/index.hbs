<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Impulsy - Ride the music!</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="/css/pages/index.css" rel="stylesheet">
        <script src="/js/menu.js"></script>
    </head>
    <body>
        <section id="menu" class="menu" state="closed">
            <div class="menuCloser" onclick="slideMenu('close')">X</div>
            <ul>
                <li class="menuItem"><a href="login">Log in</a></li>
                <li class="menuItem"><a href="signup">Sign up</li></a>
                <li class="menuItem"><a href="hallOfFame">Hall of fame</li></a>
                <li class="menuItem"><a href="howItWorks">How it works</li></a>
            </ul>
        </section>
        <section class="content">

            {{!-- Burger --}}

            <button id="burger" class="button button-small" onclick="slideMenu('open')">
                <img src="../img/home.svg" alt="Home" width="30px" height="30px">
            </button>

            <h1 class="title">Impulsy - Ride the music</h1>

            <!-- ********** MOST PLAYED TRACKS ********** -->
            {{#if userConnected}}
                <section id="mostPlayedTracks" class="flex-col">
                    <h2 class="title">Your most played tracks</h2>
                    <div class="track-list flex-row">
                        {{#each userMostPlayed}}
                            <div class="track">
                                <a href="/difficulty/{{track_id}}"><button class="button button-track">{{name}}</button></a>
                            </div>
                        {{/each }}
                    </div>
                </section>

                <!-- ********** FAVORITE TRACKS ********** -->

                <section id="favorites" class="flex-col hidden">
                    <h2 class="title">Favorite tracks</h2>
                    <div class="track-list flex-row">
                        {{#each userFavorite}}
                            <div class="track">
                                <a href="/difficulty/{{track_id}}"><button class="button button-track">{{name}}</button></a>
                            </div>
                        {{/each }}
                    </div>
                </section>
            {{/if}}

            <!-- ********** YOUTUBE SEARCH BAR ********** -->

            <section id="ytSearch" class="flex-col hidden">
                <h2 class="title">Search through YouTube</h2>
                <div id="ytBrowser" class="inputWrapper flex-row">
                    <input type="text" class="input" placeholder="type a song...">
                    <button class="button button-small"><img src="/img/searcher.svg" alt="Magnifying Glass" width="30px" height="30px"></button>
                </div>
            </section>

            <!-- ********** TREND TRACKS ********** -->

            <section id="trendings" class="flex-col">
                <h2 class="title">Trend tracks</h2>
                <div class="track-list flex-row">
                    {{#each trend}}
                        <div class="track">
                            <a href="/difficulty/{{track_id}}"><button class="button button-track">{{name}}</button></a>
                        </div>
                    {{/each }}
                </div>
            </section>
        </section>
        
    </body>
</html>