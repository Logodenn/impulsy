<!DOCTYPE html>
<html lang="en">
    <head>
        <title>{{ gameName }} + {{ catchPhrase }}</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="css/pages/login.css" rel="stylesheet">
        <script src="js/login.js"></script>
    </head>
    <body>

        <section class="content">

            <h1 class="catchPhrase">Impulsy - Ride the music</h1>

            <div id="buttons" class="buttonWrapper flex-row">
                <button id="displayLoginForm" class="button" state="active" onclick="displayForm('login')">Use your account</button>
                <button id="displaySignupForm" class="button" state="passive" onclick="displayForm('signup')">New to Impulsy?</button>
            </div>

            <div id="formWrapper" class="flex-row">

                <form id="loginForm" action="" class="form flex-col">

                    <div class="inputWrapper">
                        <label for="lusername">Username</label>
                        <input type="text" id="lusername" class="input">
                    </div>

                    <div class="inputWrapper">
                        <label for="lpassword">Password</label>
                        <input type="text" id="lpassword" class="input">
                    </div>

                    <button class="button" state="passive">Log in</button>

                </form>

                {{!-- SIGN UP FORM --}}

                <form id="signupForm" action="http://127.0.0.1:8080/register" method="post" class="form flex-col hidden">

                    <div class="inputWrapper">
                        <label for="username">Username</label>
                        <input type="text" id="username" class="input">
                    </div>

                    <div class="inputWrapper">
                        <label for="password">Password</label>
                        <input type="text" id="password" class="input">
                    </div>

                    <div class="inputWrapper">
                        <label for="passwordConfirmation">Confirm password</label>
                        <input type="text" id="passwordConfirmation" class="input">
                    </div>

                    <div class="inputWrapper">
                        <label for="mail">Mail</label>
                        <input type="text" id="mail" class="input">
                    </div>

                    <button class="button" type="submit" form="signupForm" state="passive" onclick="validateEmail()">Sign up</button>
                    
                </form>

            </div>

        </section>
        
    </body>
</html>